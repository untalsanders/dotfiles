#!/usr/bin/env bash

set -euo pipefail

##? Setups the environment
#?? 1.0.0
##?
##? Usage:
##?    install
echo
echo "---------------------------------------------------------"
echo "ðŸš€ Welcome to the sandersgutierrez/dotfiles installer!"
echo "---------------------------------------------------------"
echo

# To test that git is installed (if not macOS will prompt an installer)
git_version=$(git --version | awk '{print $3}')
echo "ðŸ‘‰  Git Version: $git_version"

export DOTFILES_PATH="$HOME/.dotfiles"
if ! [[ -d $DOTFILES_PATH ]]; then 
    git clone --depth 1 git@github.com:sandersgutierrez/dotfiles.git "$DOTFILES_PATH"
    echo
    echo "ðŸ‘‰  Cloning into: '$DOTFILES_PATH'"
fi



